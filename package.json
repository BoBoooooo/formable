{
  "name": "formable",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "version": "0.1.0",
  "author": "BoBo<boboooooo159@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "yarn workspace docs run storybook",
    "bootstrap": "lerna bootstrap",
    "watch": "lerna run build:watch --stream --parallel",
    "build": "lerna run build",
    "lint": "eslint '*/**/*.{js,jsx,ts,tsx}' --quiet --color --fix",
    "test": "NODE_OPTIONS=--unhandled-rejections=warn jest --coverage",
    "publish": "lerna publish",
    "publish:beta": "lerna publish --canary --pre-dist-tag=beta --preid=beta --yes",
    "log": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.4",
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.20.13",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-react": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@testing-library/jest-dom": "^5.15.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/enzyme": "^3.10.10",
    "@types/jest": "^27.0.0",
    "@types/node": "^18.15.3",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.5.0",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.5",
    "babel-jest": "^27.3.1",
    "conventional-changelog-cli": "^2.1.1",
    "enzyme": "^3.11.0",
    "enzyme-to-json": "^3.6.0",
    "eslint": "^7.12.1",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.14.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.0",
    "jest": "^27.3.1",
    "lerna": "^4.0.0",
    "less": "^2.7.3",
    "lint-staged": "^10.4.2",
    "mini-css-extract-plugin": "^0.9.0",
    "prettier": "^1.19.1",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-test-renderer": "^17.0.2",
    "rimraf": "^4.1.2",
    "ts-jest": "^27.0.7",
    "typescript": "^4.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
